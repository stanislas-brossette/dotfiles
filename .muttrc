source ~/.dotfiles/.mutt/identity.rc
source ~/.dotfiles/.mutt/smtp.rc

set spoolfile = +gmail/INBOX
set sleep_time = 0

#======================================================#
# Folders

set mbox_type=Maildir
set mbox="~/Mail/"
set folder="~/Mail/"      # Local mailboxes stored here
set record="+sent/"           # Where to store sent messages
set postponed="+drafts/"   # Where to store draft messages
#set move=no                  # Don't move mail from spool
set mask="!^\\.[^.]"

# Generated by offlineimap.
source ~/.mutt/mailboxes

set sort_browser=alpha    # Sort mailboxes by alpha(bet)

#======================================================#
# What to show and order of headers
ignore *
unignore Date: From: User-Agent: \
         Cc: Reply-To: Subject: Mail-Followup-To:
hdr_order Date From Subject To CC

set sort=threads
set sort_browser=reverse-date
set sort_aux=reverse-last-date-received
#======================================================#
# which editor do you want to use? 
set editor = "emacs"
set edit_headers=yes      # See the headers when editing

#======================================================#
# Odds and ends

set markers          # mark wrapped lines of text in the pager with a +
set smart_wrap       # Don't wrap mid-word
set pager_context=5  # Retain 5 lines of previous page when scrolling.
set status_on_top    # Status bar on top.
push <show-version>  # Shows mutt version at startup

set duplicate_threads = yes

auto_view text/html

source ~/.dotfiles/.mutt/goobook.rc

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html
bind pager R  group-reply
# View attachments properly.
bind attach <return> view-mailcap

#Skip some options
set include=yes
set forward_quote=yes
set copy=yes
set delete=yes
set confirmappend=no
set fast_reply=yes


source ~/.dotfiles/.mutt/gmail.rc
source ~/.dotfiles/.mutt/gpg.rc
source ~/.dotfiles/.mutt/notmuch.rc

hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html
bind editor <Tab> complete-query
bind editor ^T complete
bind editor <space> noop

# Gmail-style keyboard shortcuts
macro index,pager A "<save-message>+gmail/zall_mail<enter>" "move message to the archive"
